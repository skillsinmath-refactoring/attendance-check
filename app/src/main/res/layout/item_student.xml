<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:background="@drawable/student_item"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/studentNameTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:text="학생 이름(0000)"
        android:textSize="12sp"
    />

    <TextView
        android:id="@+id/checkInTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:text="오후 01시 43분"
        android:textSize="12sp"
     />

    <TextView
        android:id="@+id/checkOutTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"

        android:text="오후 02시 50분"
        android:textSize="12sp"
         />

    <TextView
        android:id="@+id/studyTimeTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        android:text="1시간 43분 10초"
        android:textSize="12sp"
        android:textColor="@color/red2" />

</LinearLayout>
